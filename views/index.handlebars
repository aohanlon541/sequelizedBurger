<img src="assets/img/burger-icon.png" alt="burger">
<h1>MVC with Burgers!</h1>


<div id="burgerForm">
    <h2>Add a Burger</h2>
    <form class="create-update-form" action="/" method="POST">

      <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
      </div>

      <button type="submit" id="submitBurg">Add Burger</button>
    </form>
</div>  

<div id="burgerContainer">
  <div id="notDevoured">
    <h2>Available Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" id="devour" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit">DEVOUR</button>
            </form>

          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>  

  <div id="devoured">
    <h2>Devoured Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div> 
</div> 

